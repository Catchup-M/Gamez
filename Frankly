<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Canvas Game with Floating Image</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            width: 100%;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        /* Set landscape orientation */
        @media only screen and (orientation: landscape) {
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            .container {
                position: relative;
                width: 100%;
                height: 100%;
                overflow: hidden;
            }

            /* Floating Image at the Bottom */
            .floating-image {
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                max-width: 100%;
                height: auto;
                z-index: 10;
            }

            /* Canvas Styling */
            canvas {
                width: 100%;
                height: 100%;
                display: block;
                background-color: #d0e7f9;
                z-index: 5;
            }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Canvas for the game -->
        <canvas id="gameCanvas"></canvas>
        
        <!-- Floating Image -->
        <img src="file_00000000ba6471f4917611ec1970cd28-removebg-preview.png" alt="Floating Image" class="floating-image">
    </div>

    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");

        // Set canvas to full window size
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // Example game variables
        let playerX = canvas.width / 2;
        let playerY = canvas.height - 150;
        const playerWidth = 50;
        const playerHeight = 50;
        const speed = 5;

        // Handle player movement
        let keys = {};

        document.addEventListener("keydown", (e) => {
            keys[e.code] = true;
        });

        document.addEventListener("keyup", (e) => {
            keys[e.code] = false;
        });

        function drawPlayer() {
            ctx.fillStyle = "blue";
            ctx.fillRect(playerX, playerY, playerWidth, playerHeight);
        }

        function updateGame() {
            // Move player based on keypresses
            if (keys["ArrowLeft"] && playerX > 0) {
                playerX -= speed;
            }
            if (keys["ArrowRight"] && playerX < canvas.width - playerWidth) {
                playerX += speed;
            }
            if (keys["ArrowUp"] && playerY > 0) {
                playerY -= speed;
            }
            if (keys["ArrowDown"] && playerY < canvas.height - playerHeight) {
                playerY += speed;
            }

            // Clear the canvas and redraw everything
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            drawPlayer();

            // Call the updateGame function recursively
            requestAnimationFrame(updateGame);
        }

        // Start the game loop
        updateGame();

        // Adjust canvas size when window is resized
        window.addEventListener("resize", () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
</body>
</html>
